<button class="locker" disabled="@Disabled" @onclick="() => Toggle.InvokeAsync()">
    @if (ReadOnly) 
    { 
        <text> &#128274; </text> 
    }
    else 
    { 
        <text> &#128275; </text> 
    }
</button>

@code {
    [CascadingParameter] public bool ReadOnly { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;

    [Parameter, EditorRequired] public EventCallback Toggle { get; set; }
}
